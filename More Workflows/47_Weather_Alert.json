                        }
                    ]
                }
            },
            "name": "IF Rain",
            "type": "n8n-nodes-base.if",
            "typeVersion": 1,
            "position": [
                650,
                300
            ]
        },
        {
            "parameters": {
                "chatId": "@my_channel",
                "text": "It's going to rain today! Bring an umbrella."
            },
            "name": "Telegram",
            "type": "n8n-nodes-base.telegram",
            "typeVersion": 1,
            "position": [
                850,
                200
            ]
