    ],
    "connections": {
        "Morning Trigger": {
            "main": [
                [
                    {
                        "node": "OpenWeatherMap",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "OpenWeatherMap": {
            "main": [
                [
                    {
                        "node": "IF Rain",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "IF Rain": {
            "main": [
                [
                    {
                        "node": "Telegram",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
    }
